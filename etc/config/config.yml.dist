Database:
    Connection:
        host: 127.0.0.1
        username: root
        password: pwd

    DBNames:
        realm_db: alpha_realm
        world_db: alpha_world
        dbc_db: alpha_dbc

Server:
    Connection:
        RealmServer:
            host: 127.0.0.1  # server machine local IP
            port: 9100
            realm_name: alphacore

        RealmProxy:
            host: 127.0.0.1  # set this to external IP if needed
            port: 9090

        WorldServer:
          host: 127.0.0.1  # set this to external IP if needed
          port: 8100

    Settings:
        auto_create_accounts: True
        debug: True
        supported_client: 3368
        realm_saving_interval_seconds: 60

    General:
        # Message of the day
        motd: Welcome to an alpha-core server

World:
    Gameplay:
        game_speed: 0.01666667
        update_dist: 200

    Chat:
        ChatRange:
            say_range: 25
            yell_range: 300

Unit:
    Defaults:
        base_min_damage: 1.0
        base_max_damage: 2.0
        base_attack_time: 2000
        offhand_attack_time: 1000
        bounding_radius: 0.388999998569489
        combat_reach: 1.5

    Player:
        Defaults:
            min_level: 1
            max_level: 25